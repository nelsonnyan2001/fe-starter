{
  "name": "starter",
  "version": "1.0.0",
  "description": "This is a boilerplate for all naked front-end projects.",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "serve": "browser-sync start --server --files 'dist/css/*.css, **/*.html'",
    "watch:css": "onchange 'src/scss' -- npm run scss",
    "start": "run-p serve watch:css"
  },
  "author": "Zwe Nyan Toe",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "browsersync": "*",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  }
}
